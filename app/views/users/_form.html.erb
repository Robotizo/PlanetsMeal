<%= stylesheet_link_tag "users", :media => "all" %>
<%= form_for(user) do |f| %>
<div class="container">
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li><br>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="col-md-6 col-md-offset-3 wholeSec">
    <div class="passField">
      <%= f.label "Full Name", class: "titleForms" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="passField">
      <%= f.label :email, class: "titleForms" %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>


    <div class="passField">
      <%= f.label :password, class: "titleForms" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>


    <div class="passField">
      <%= f.label :password_confirmation, class: "titleForms" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>


    <div class="actions">
      <%= f.submit "Create my account", class: "btn btn-primary signIn" %>
    </div>
  </div>
</div>



<% end %>
