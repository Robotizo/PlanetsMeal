<%= stylesheet_link_tag "orders", :media => "all" %>

<% if notice %>
  <div class="alert alert-custom fade in alert-dismissable show" style="margin-top:18px;">
   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true" style="font-size:20px">Ã—</span>
    </button>  <%= notice %>
  </div>
 <% end %>

<div class="container">
	<div class="titleOrder">Your Order</div>
<div class="productSector">

<div class="box col-md-12 col-xs-12 sec1">
  <div class="col-md-3 col-xs-12 text-center">
    <%= image_tag(@order.box.product.image_url(:thumb), class: "boxProdImg") if @order.box.product.image? %><br>
    <div class="boxInfo">
      <%= @order.box.product.title %><br>
      
    </div>
  </div>
  <div class="col-md-1 col-xs-12 text-center">
    <div class="plusBox">+</div>
  </div>
  <div class="col-md-4 col-xs-12">
    <div class="col-xs-6 col-md-12">
      <%= image_tag("ice.jpg", size: "125x125", class: "boxProdImgSub" )%>
      <span class="subBoxInfo">Ice Cream Sandwich</span><br>
    </div>
    <div class="col-xs-6 col-md-12">
      <%= image_tag("fruit.jpg", size: "125x125", class: "boxProdImgSub" )%>
      <span class="subBoxInfo">Apple</span><br>
    </div>
  </div>
  <div class="col-md-4 text-center col-xs-12 infoSec">
  	<div class="fontInf"><%= @order.user.name %></div>
  	<div class="fontInf">Order #<%= @order.id %></div>
  	<div class="fontDate"><%= @order.created_at.to_time.strftime('%B %e at %l:%M %p') %>.</div>
    <div class="boxPrice">Total</div>
    <div class="boxTot"></div>
    <div class="boxPrice actPrice"><%= number_to_currency(@order.box.box_price) %></div>
  </div>
</div>


<div class="col-md-4 col-xs-12">

<% if @user.admin == true %>

<%= form_for(@order) do |f| %>
	<%= f.select(:order_status, Order::STATUS) %>
	<%= f.submit "Confirm" %>
<% end %>

<% else %>
<% end %>


</div>


</div>

</div>