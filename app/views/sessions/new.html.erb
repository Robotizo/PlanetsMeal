<div class="container loginField">
<div class="sessionTitle">Planet's Meal Log In</div>

  <div class="col-md-6 col-md-offset-3">


    <%= form_for(:session, url: login_path) do |f| %>
    <div class="emailField">
      <%= f.label :email, class: "titleForms" %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="passField">
      <%= f.label :password, class: "titleForms" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>


<div class="text-center loginSec">
      <%= f.submit "Log in", class: "btn btn-primary signIn " %>
</div>


    <% end %>
  <div class="signUpSec">
    <div>Or <%= link_to "Sign up now!", signup_path %></div>
    <br>
    <div><%= link_to "Forgot password", new_password_reset_path %></div>
  </div>
  </div>
</div>